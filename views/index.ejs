<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JOKE-INATOR</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h1 class="title">JOKE-INATOR</h1>

    <!--MAIN JOKE GENERATOR SECTION-->
    <div class="main px-4 py-2 my-5 text-center">
      <img class="d-block mx-auto mb-4" src="/images/8eda61a59c5d419aa16bb272bb7543eb.jpg" alt="laughing man image" width="140" height="130" />
      <h2 class="main-text display-10 fw-bold text-body-emphasis"><%= jokes %></h2>
      <div class="col-lg-6 mx-auto">
        <p class="lead mb-4"></p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <button type="button" id="refreshButton" class="btn btn-primary btn-lg px-4 gap-3">HA HA, NEW JOKE!</button>
        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="container">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 fixed-bottom">
        <div class="col-md-4 d-flex align-items-center">
          <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
            <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
          </a>
          <span class="mb-3 mb-md-0 text-body-secondary">Â© 2023 Teri's JOKE-INATOR, Inc</span>
        </div>
      </footer>
    </div>

    <!--JS REFRESH ON BUTTON CLICK-->
    <script>
      const refreshButton = document.getElementById("refreshButton");

      refreshButton.addEventListener("click", () => {
        window.location.reload();
      });
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
